<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_type_left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="19dp"
            android:text="退款类型"
            android:textColor="@color/text_color_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_type_left"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/ic_gray_next"
            android:gravity="center_vertical|right"
            android:paddingLeft="16dp"
            android:paddingRight="19dp"
            android:text="请选择"
            android:textColor="@color/tv_color_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_status_left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="19dp"
            android:text="物流状态"
            android:textColor="@color/text_color_title"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/tv_status_left"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/ic_gray_next"
            android:gravity="center_vertical|right"
            android:paddingLeft="16dp"
            android:paddingRight="19dp"
            android:text="请选择"
            android:textColor="@color/tv_color_gray"
            android:textSize="15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_reason_left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="19dp"
            android:text="退款原因"
            android:textColor="@color/text_color_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/tv_reason_left"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/ic_gray_next"
            android:gravity="center_vertical|right"
            android:paddingLeft="16dp"
            android:paddingRight="19dp"
            android:text="请选择"
            android:textColor="@color/tv_color_gray"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_refund_price_left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_refund_price"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="¥"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_refund_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_refund_price_left"
            android:background="@null"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingRight="19dp"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_refund_price"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="退款金额："
            android:textColor="@color/text_color_title"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_maxmoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/linegray"
        android:paddingBottom="9dp"
        android:paddingLeft="11dp"
        android:paddingTop="9dp"
        android:text="最多¥**,含发货邮费¥**"
        android:textColor="@color/tv_color_gray"
        android:textSize="11sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_explain"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="退款说明："
            android:textColor="@color/text_color_title"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/et_explain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/tv_explain"
            android:background="@null"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:hint="选填"
            android:maxLines="1"
            android:paddingRight="19dp"
            android:singleLine="true"
            android:textColorHint="@color/tv_color_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/linegray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="上传凭证(最多3张)"
        android:textColor="@color/text_color_title"
        android:textSize="14sp" />

    <com.wholesale.yzx.yxzwholesale.view.widght.WarpLinearLayout
        android:id="@+id/warp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.wholesale.yzx.yxzwholesale.view.widght.WarpLinearLayout>
</LinearLayout>