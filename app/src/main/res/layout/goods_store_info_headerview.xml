<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bggray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <org.raphets.roundimageview.RoundImageView
            android:id="@+id/iv_store_logo"
            app:corner_radius="5dp"
            app:type="round"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/tv_name"
            android:text="XXX店"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/text_color_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_pell_num"
            android:text="已拼：17646件"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/tv_color_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_custom_service"
                android:textColor="@color/text_color_title"
                android:textSize="14sp"
                android:text="客服"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@color/bggray"
                android:layout_width="1dp"
                android:layout_height="15dp"></View>
            <TextView
                android:id="@+id/tv_collage"
                android:textColor="@color/text_color_title"
                android:textSize="14sp"
                android:text="收藏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <org.raphets.roundimageview.RoundImageView
            android:id="@+id/iv_cpupon"
            android:layout_marginTop="10dp"
            app:type="round"
            android:scaleType="fitXY"
            app:corner_radius="5dp"
            android:layout_width="100dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:text="大家正在拼"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_look_all"
                android:text="查看全部"
                android:textSize="14sp"
                android:textColor="@color/tv_color_gray"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_gray_next"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_pelling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="全部商品"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>