<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <com.wholesale.yzx.yxzwholesale.view.widght.CircleImageView
            android:id="@+id/iv_commenter_photo"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:text="王五"
            android:id="@+id/tv_commenter_name"
            android:textColor="@color/text_color_title"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_commenter_photo"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="2018.07.13"
            android:textSize="14sp"
            android:textColor="@color/tv_color_gray"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_color_title"
        android:text="质量很好，款式一模一样，服务一级棒，很满意！"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/bggray"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

</LinearLayout>