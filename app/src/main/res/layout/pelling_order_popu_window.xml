<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/pell_order_popu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/popu_layout"
        android:layout_alignParentBottom="true"
        android:background="@color/bggray"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_above="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/red"
                    android:text="￥19.9-59.9"
                    android:textSize="16sp"
                    android:layout_marginLeft="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:text="请选择 颜色 型号"
                    android:layout_below="@+id/tv_price"
                    android:textColor="@color/text_color_title"
                    android:textSize="14sp"
                    android:layout_marginLeft="102dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <ScrollView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="颜色"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.wholesale.yzx.yxzwholesale.view.widght.WarpLinearLayout
                            android:id="@+id/warp_layout1"
                            app:grivate="left"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.wholesale.yzx.yxzwholesale.view.widght.WarpLinearLayout>
                    </LinearLayout>
                    <View
                        android:background="@color/bggray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></View>
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="型号"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.wholesale.yzx.yxzwholesale.view.widght.WarpLinearLayout
                            android:id="@+id/warp_layout2"
                            app:grivate="left"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.wholesale.yzx.yxzwholesale.view.widght.WarpLinearLayout>
                    </LinearLayout>
                    <View
                        android:background="@color/bggray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></View>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:text="数量"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_title"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.wholesale.yzx.yxzwholesale.view.widght.AmountView
                            android:id="@+id/amount_view"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </com.wholesale.yzx.yxzwholesale.view.widght.AmountView>
                    </RelativeLayout>
                    <View
                        android:background="@color/bggray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></View>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sure"
            android:text="确定"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </RelativeLayout>
    <org.raphets.roundimageview.RoundImageView
        android:id="@+id/iv_goods_picture"
        app:border_color="@color/white"
        app:border_width="2dp"
        app:type="round"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="350dp"
        app:leftBottom_corner_radius="5dp"
        app:rightBottom_corner_radius="5dp"
        app:leftTop_corner_radius="5dp"
        app:rightTop_corner_radius="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />
</RelativeLayout>